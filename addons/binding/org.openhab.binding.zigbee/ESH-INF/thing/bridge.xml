<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zigbee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- ZigBee Bridge -->
    <bridge-type id="bridge">
        <label>ZigBee Bridge</label>
        <description>The ZigBee bridge represents the ZigBee bridge.</description>

        <config-description>
        	<parameter name="serialPort" type="text">
				<context>serial_port</context>
				<label>Serial Port</label>
				<description>The serial port the bridge is connected to</description>
				<required>true</required>
			</parameter>
			<parameter name="baud" type="integer">
				<context>serial_port</context>
				<label>Baudrate</label>
				<description>Baudrate of used serial port</description>
				<required>true</required>
			</parameter>
			<parameter name="uid64" type="text">
				<context>node</context>
				<label>UID64</label>
				<description>UID64 of bridge</description>
				<required>true</required>
			</parameter>			
        </config-description>
    </bridge-type>

</thing:thing-descriptions>
